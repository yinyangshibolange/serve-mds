#!/usr/bin/env node

const path = require("path")
const chalk = require("chalk")
const yargs = require("yargs")
const pkg = require('../package.json');
const fs = require("fs")
const { initUserSpace, startServe } = require("../lib/handle")


require('yargonaut')
  .help('3D-ASCII')
  .helpStyle('green')
  .style('blue')

var argv = yargs.command({
  command: 'init',
  describe: 'init your user space',
  builder: {
    path: {
      alias: 'p',
      describe: 'init file paths',
      demand: false,
      type: 'string'
    }
  },
  handler (argv) {
    initUserSpace(argv.path, )
  }
})
  .command({
    command: 'start',
    describe: 'start your md service',
    builder: {
      config: {
        alias: 'c',
        describe: 'your md config file path',
        default: 'serve-mds.config.js',
        demand: false,
        type: 'string'
      }
    },
    handler (argv) {
      startServe(argv.config)
    }
  })
  .example('$0 init -p C://user/Document', 'init at path C://user/Document')
  .example('$0 init', 'init at current path')
  .example('$0 start -c md.config.js', 'start md service use md.config.js')
  .example('$0 start', 'start md service use default config (serve-mds.config.js)')
  .wrap(null)
  .argv

