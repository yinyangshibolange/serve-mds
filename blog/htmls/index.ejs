<!DOCTYPE html>
<html>
 <head>
  <link rel="stylesheet" href="css/modules/index.css">
 </head>
 <body>
<section class="flex">
 <section id="main" class="module">
  <ul id="mainList" class="root">
   <% mds.forEach(function(item){ %>
    <%- `<li class="md-card">
 <a href="${item.index}">
   <div class="md-card-banner">
 <img src="${item.banner}" alt="">
 </div>
 <div class="md-card-right">
 <div class="md-card-title">${item.title}</div>
 <div class="md-card-other"><div class="author">${item.author}</div><div class="time">${item.time}</div></div>
 </div>
   </a>
 </li>`
    %>
   <% }); %>
  </ul>

<!--  <div class="list-title">推荐</div>-->
<!--  <ul id="recommandList"></ul>-->
 </section>

 <section class="module-right" id="contentRightFix">
  <section class="module" id="me">
<div class="avatar">
</div>
   <div class="nickname mt-20 font-20">坤坤两年半</div>

   <div class="flex  contacts mt-10">
    <a class="abtn" href="https://github.com/yinyangshibolange"><i class="iconfont icon-github"></i></a>
    <a class="abtn"><i class="iconfont icon-wechat"></i></a>
    <a class="abtn"><i class="iconfont icon-email"></i></a>
   </div>
  </section>

  <section id="recommand" class="module mt-20">
      <div class="module-title">推荐</div>
      <ul class="root">
      <% recommendList.forEach(item => {%>
          <%- `<li class="">
 <a href="${item.index}" class="abtn-flex pd-10">

 <div class="md-card-right flex-1">
 <div class="md-card-title font-15 color-333">${item.title}</div>
 <div class="md-card-other font-11 color-999"><div class="author">${item.author}</div><div class="time">${item.time}</div></div>
 </div>

   <div class="md-card-banner flex-shrink-0 w-50">
 <img src="${item.banner}" alt="">
 </div>
   </a>
 </li>`
          %>
      <% }) %>
      </ul>
  </section>

  <section id="typeModule" class="type-module module mt-20">
   <div class="module-title">分类</div>
   <%- type_module_html %>
  </section>
  <section id="tagModule" class="tag-module module mt-20">
   <div class="module-title">标签</div>
   <ul>
    <% tags.forEach(function(item) { %>
     <%- `<li><a class="hover-line" href="/tag-index?tag=${item}">${item}</a></li>` %>
    <% }) %>
   </ul>
  </section>

 </section>
</section>
 </body>
</html>
