<body>
 <div class="hi-container">
  <div class="app_name">我的文档</div>
  <form action="/pass" class="auth_form" autocomplete="off">
   <div class="form_item_pass">
    <label for="password">密码</label>
    <input id="password" name="password" placeholder="请输入密码" autocomplete="off">
   </div>
   <button class="submit" type="submit">提交</button>
  </form>
 </div>
 <script>
  window.getQueryString = function (name, url = window.location.href) {
   if (!url || !name) return null
   var reg = new RegExp("([?&])" + name + "=([^&]*)(&|$)", "i");
   var r = url.match(reg);
   if (r != null) return unescape(r[2]);
   return null;
  }

  var passerror = getQueryString("pass") === 'error'
  if (passerror) {
   alert("密码错误")
  }
  history.replaceState({ pass: '' }, '', 'hi.html')
 </script>

</body>

</html>
